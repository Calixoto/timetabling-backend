// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  password_hash String
  created_at    DateTime @default(now())

  @@map("users")
}

model Classroom {
  id       String   @id @default(uuid())
  name     String
  capacity Int
  location String
  courses  Course[]

  @@map("class_room")
}

model Course {
  id            String    @id @default(uuid())
  name          String
  code          String
  capacity      Int
  schedule      String[]
  Classroom     Classroom @relation(fields: [class_room_id], references: [id])
  class_room_id String

  @@index([class_room_id])
  @@map("courses")
}
